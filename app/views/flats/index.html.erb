<h2>All our Flats</h2>
<p>All <%= @flats.count %> flats</p>

<div class="row d-flex">
  <% @flats.each do |flat| %>
    <div class="col-4"><div class="card">
          <%= image_tag(flat.image_url, :alt => flat.name, class: 'img-thumbnail') %>
          <div class="card-body bg-light">
            <h3><%= flat.name %></h3>
            <p><%= flat.address %></p>
            <div class="d-flex">
              <p class="m-1"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>
              <p class="m-1"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
            </div>
          </div>
          <div class="d-flex p-3">
            <%= link_to "More Info", flat_path(flat), class: "badge badge-pill badge-primary m-1" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "badge badge-pill badge-warning m-1" %>
            <%= link_to "Remove", flat_path(flat), method: 'delete', data: { confirm: "Are you sure?" }, class: "badge badge-pill badge-danger m-1" %>
          </div>
        </div></div>
  <% end %>
</div>
